<UserControl x:Class="Lab_UCP.View.UserContent.ScreenSaverPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_UCP.View.UserContent"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator},Path=ScreenSaver}"
             d:DesignHeight="598" d:DesignWidth="1100">
    <Grid>
        <Grid x:Name="grid">
            <TextBlock x:Name="textBlock" Text="{Binding SaverModel.GreetingWord}" Foreground="#485778" FontWeight="Light" FontSize="50" HorizontalAlignment="Center" Margin="225,180,225,0"/>
            <TextBlock x:Name="textBlock1" Text="{Binding SaverModel.Time}" Foreground="#485778" FontWeight="Black" FontSize="50" HorizontalAlignment="Center" Margin="293,240,293,0" />
        </Grid>
    </Grid>
</UserControl>
